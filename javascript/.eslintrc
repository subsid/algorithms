{
  "extends": "airbnb",
  "plugins": ["jasmine"],
  "env": {
    "jasmine": true
  },
  "rules": {
    "arrow-body-style": ["error", "always"],
    "no-underscore-dangle": "off",
    "no-unused-expressions": ["off"],
    "no-unused-vars": ["error", { "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }],
    "no-plusplus": ["error", {"allowForLoopAfterthoughts": true}]
  }
}
